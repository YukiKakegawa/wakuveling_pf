<!DOCTYPE html>
<html>
  <head>
    <title>Wakuveling</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-image">
    <header>
      <nav class="navbar navbar-expand-lg border-bottom border-dark bg-color justify-content-between">
        <p class="wakuveling-logo"><%= image_tag('wakuveling-logo.png', class: 'wakuveling-logo') %></p>
        <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "ホーム", root_path, class: "btn btn-light ml-3" %>
            </li>
            <li class="nav-item">
              <%= link_to "マイページ", user_path(current_user), class: "btn btn-light ml-3" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規投稿", new_post_path, class: "btn btn-light ml-3" %>
            </li>
            <li class="nav-item">
              <%= link_to "投稿一覧", posts_path, class: "btn btn-light ml-3" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-light ml-3" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "btn btn-light ml-3" %>
      
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: "btn btn-light ml-3" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "btn btn-light ml-3" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  <footer>

  </footer>
  </body>
</html>
