<h2>プロフィール編集</h2>
  <div><%= form_with model:@user, url: user_path(@user), local:true do |f| %>

    <div class="form-group row">
      <%= f.label :name, "名前", class: "col-sm-3 col-form-label" %>
      <%= f.text_field :name, class: "col-sm-3 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :birthplace, "出身地", class: "col-sm-3 col-form-label" %>
      <%= f.text_field :birthplace, class: "col-sm-3 col form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :introduction, "紹介文", class: "col-sm-3 col-form-label" %>
      <%= f.text_field :introduction, class: "col-sm-3 col-form-label" %>
    </div>
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.submit "完了", class: "btn btn-success" %>
    <% end %>
      </div>
    </div>

  </div>