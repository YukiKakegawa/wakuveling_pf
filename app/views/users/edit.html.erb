  <div><%= form_with model:@user, url: user_path(@user), local:true do |f| %>
    <div class="container">
      <div class="card-container">
        <div class="card-body">
          <h3 class="text-center">プロフィール編集</h3>
          <hr>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user-circle"></i>
                </span>
              </div>
              <%= f.attachment_field :profile_image %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                   <i class="fas fa-house-user"></i>
                </span>
              </div>
              <%= f.select :birthplace, User.birthplaces.keys,{}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-pen"></i>
                </span>
              </div>
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "完了", class: "btn btn-success btn-block" %>
          </div>

        </div>
      </div>
    </div>
    <% end %>
