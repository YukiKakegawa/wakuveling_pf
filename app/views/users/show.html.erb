<h2>プロフィール</h2>

  <div class="container">
    <div class="form-group row">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
    </div>
    <div class="form-group row">
      <div class="col-sm-3">
        名前
      </div>
      <div>
        <%= @user.name %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3">
        出身地
      </div>
      <div>
        <%= @user.birthplace %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3">
        紹介文
      </div>
      <div>
        <%= @user.introduction %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-5">
        <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-success" %>
      </div>
    </div>

  </div>