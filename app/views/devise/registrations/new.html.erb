<h2>新規登録</h2>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="container">

   <div class="field row">
     <%= f.label :name, "名前", class: "col-sm-3" %><%= f.text_field :name, class: "col-sm-3", autofocus: true, autocomplete: "name" %>
   </div>

   <div class="field row">
     <%= f.label :birthplace, "出身地", class: "col-sm-3" %><%= f.text_field :birthplace, class: "col-sm-3", autofocus: true, autocomplete: "birthplace" %>
   </div>

   <div class="field row">
     <%= f.label :telephone_number, "電話番号", class: "col-sm-3" %><%= f.text_field :telephone_number, class: "col-sm-3", autofocus: true, autocomplete: "phone_number" %>
   </div>

   <div class="field row">
     <%= f.label :email, "メールアドレス", class: "col-sm-3" %><%= f.email_field :email, class: "col-sm-3", autofocus: true, autocomplete: "email" %>
   </div>


   <div class="field row">
     <%= f.label :password, "パスワード" %>
     <% if @minimum_password_length %>
   <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
    <%= f.password_field :password, class: "col-sm-2 mb-2", autocomplete: "password" %>
   </div>

   <div class="field row">
     <%= f.label :password_confirmation, "パスワード（確認）" %><%= f.password_field :password_confirmation, class: "col-sm-3", autocomplete: "password_confirmation" %>
   </div>

   <div class="actions row">
     <%= f.submit "新規登録", class: "btn btn-success center-block col-sm-2 offset-sm-3" %>
   </div>
  <% end %>

 </div>




