全ユーザーの投稿とランキング表示

<div class="container">
  <div class="row">
    <div class="col-sm-10">

    <div class="row">
   <% @posts.each do |post| %>
     <div class="col-sm-4">
       <div class="card">
         <%= link_to post_path(post) do %>
         <div class="card-img">
          <%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg' %>
         </div>
         <div class="card-body">
          <div>
            <%= post.tourist_spot %>
          </div>
          <div>
            <%= post.prefecture %>
          </div>
          <div>
            <%= post.address %>
          </div>
          <div>
            <%= post.body %>
          </div>
         </div>
         <% end %>
       </div>
     </div>
     <% end %>
 </div>




    </div>
    <div class="col-sm-2">
      <p>ランキング</p>
      <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
      <%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg' %>
      <% end %>
    <div>
      <%= post.tourist_spot %>
    </div>
    <div>
      <%= post.prefecture %>
    </div>
      <% end %>
    </div>
  </div>
</div>