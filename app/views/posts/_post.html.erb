<% if user_signed_in? && current_user != post.user %>
  <% if current_user.favorite_find(post.id) %>
    <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% elsif user_signed_in? && current_user == post.user %>
   <%#自分の記事の場合= link_to '投稿一覧', user_path(current_user.id), method: :get, remote: false %>
   <%#例えば自分の投稿一覧へのリンクとかお気に入りの文字だけとか、お気に入り数を表示するとかもしくは何も表示しない%>
<% end %>

